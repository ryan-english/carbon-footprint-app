<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#212121"
    tools:context=".Education">

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="332dp"
            android:layout_height="82dp"
            android:layout_marginStart="35dp"
            android:layout_marginLeft="35dp"
            android:layout_marginTop="26dp"
            android:layout_marginEnd="35dp"
            android:layout_marginRight="35dp"
            android:gravity="center"
            android:text="@string/tips_headline"
            android:textAllCaps="true"
            android:textColor="@color/pastelPink"
            android:textSize="26sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <RelativeLayout
            android:id="@+id/titles"
            android:layout_width="360dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_gravity="center"
            android:orientation="horizontal"
            app:layout_constraintTop_toBottomOf="@+id/textView2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <TextView
                android:id="@+id/textView6"
                android:layout_width="159dp"
                android:layout_height="43dp"
                android:gravity="center_horizontal"
                android:text="@string/travelTitle"
                android:textAllCaps="true"
                android:textColor="@color/pastelBlue"
                android:textSize="18sp"
                android:layout_alignParentLeft="true"
                />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="179dp"
                android:layout_height="43dp"
                android:gravity="center_horizontal"
                android:text="@string/electricTitle"
                android:textAllCaps="true"
                android:textColor="@color/pastelTeal"
                android:textSize="18sp"
                android:layout_alignParentRight="true"
                />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/firstInfo"
            android:layout_width="360dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_gravity="center"
            android:orientation="horizontal"
            app:layout_constraintTop_toBottomOf="@+id/titles"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <TextView
                android:id="@+id/textView4"
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:gravity="left"
                android:justificationMode="inter_word"
                android:text="@string/travel_info_text_0"
                android:textColor="@color/white"
                android:textSize="15sp"
                app:fontFamily="@font/source_sans_pro"/>

            <TextView
                android:id="@+id/textView13"
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:justificationMode="inter_word"
                android:text="@string/campus_info_text_0"
                android:textColor="@color/white"
                android:layout_alignParentRight="true"
                android:textSize="15sp"
                app:fontFamily="@font/source_sans_pro"/>



        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/secondInfo"
            android:layout_width="360dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_gravity="center"
            android:orientation="horizontal"
            app:layout_constraintTop_toBottomOf="@+id/firstInfo"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <TextView
                android:id="@+id/textView14"
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:justificationMode="inter_word"
                android:text="@string/campus_info_text_2"
                android:textColor="@color/white"
                android:layout_alignParentRight="true"
                android:textSize="15sp"
                app:fontFamily="@font/source_sans_pro"/>


            <TextView
                android:id="@+id/textView8"
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="0dp"
                android:gravity="left"
                android:justificationMode="inter_word"
                android:text="@string/travel_info_text_1"
                android:textColor="@color/white"
                android:textSize="15sp"
                app:fontFamily="@font/source_sans_pro"/>


        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/thirdInfo"
            android:layout_width="360dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_gravity="center"
            android:orientation="horizontal"
            app:layout_constraintTop_toBottomOf="@+id/secondInfo"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <TextView
                android:id="@+id/textView9"
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:justificationMode="inter_word"

                android:text="@string/travel_info_text_2"
                android:textColor="@color/white"
                android:layout_alignParentLeft="true"
                android:textSize="15sp"
                app:fontFamily="@font/source_sans_pro"/>

            <TextView
                android:id="@+id/textView11"
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:justificationMode="inter_word"
                android:text="@string/campus_info_text_1"
                android:textColor="@color/white"
                android:layout_alignParentRight="true"
                android:textSize="15sp"
                app:fontFamily="@font/source_sans_pro"/>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/moreTitles"
            android:layout_width="360dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_gravity="center"
            android:orientation="horizontal"
            app:layout_constraintTop_toBottomOf="@+id/thirdInfo"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <TextView
                android:id="@+id/textView12"
                android:layout_width="159dp"
                android:layout_height="43dp"
                android:gravity="center_horizontal"
                android:text="@string/facilitiesTitle"
                android:textAllCaps="true"
                android:textColor="@color/pastelOrange"
                android:textSize="18sp"
                android:layout_alignParentLeft="true"/>

            <TextView
                android:id="@+id/textView15"
                android:layout_width="160dp"
                android:layout_height="43dp"
                android:gravity="center_horizontal"
                android:text="@string/alwaysTitle"
                android:textAllCaps="true"
                android:textColor="@color/pastelPurple"
                android:textSize="18sp"
                android:layout_alignParentRight="true"/>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/fourthInfo"
            android:layout_width="360dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_gravity="center"
            android:orientation="horizontal"
            app:layout_constraintTop_toBottomOf="@+id/moreTitles"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <TextView
                android:id="@+id/textView5"
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:justificationMode="inter_word"
                android:text="@string/dev_text_info_0"
                android:textColor="@color/white"
                android:layout_alignParentLeft="true"
                android:textSize="15sp"
                app:fontFamily="@font/source_sans_pro"/>


            <TextView
                android:id="@+id/textView16"
                android:layout_width="154dp"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:gravity="left"
                android:justificationMode="inter_word"
                android:text="@string/always_text_into_0"
                android:textColor="@color/white"
                android:textSize="15sp"
                app:fontFamily="@font/source_sans_pro" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/fifthInfo"
            android:layout_width="360dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_gravity="center"
            android:orientation="horizontal"
            app:layout_constraintTop_toBottomOf="@+id/fourthInfo"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <TextView
                android:id="@+id/textView10"
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:justificationMode="inter_word"
                android:text="@string/dev_text_info_1"
                android:textColor="@color/white"
                android:layout_alignParentLeft="true"
                android:textSize="15sp"
                app:fontFamily="@font/source_sans_pro"/>


            <TextView
                android:id="@+id/textView17"
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:justificationMode="inter_word"
                android:text="@string/always_text_into_1"
                android:textColor="@color/white"
                android:layout_alignParentRight="true"
                android:textSize="15sp"
                app:fontFamily="@font/source_sans_pro"/>

        </RelativeLayout>

    <RelativeLayout
        android:layout_width="310dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="55dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="55dp"
        android:layout_marginBottom="35dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/backButton"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:background="@drawable/small_green_button"
            android:onClick="backToStart"
            android:text="@string/home"
            android:textColor="@color/pastelGreen" />

    </RelativeLayout>

    </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>