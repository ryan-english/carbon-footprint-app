<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".userInput2"
    android:background="#212121">

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="35dp"
                android:layout_marginTop="25dp"
                android:text="@string/electricTitle"
                android:textColor="@color/orange"
                android:textSize="24sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginLeft="35dp" />

            <TextView
                android:id="@+id/question4"
                android:layout_width="310dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="55dp"
                android:layout_marginLeft="55dp"
                android:layout_marginTop="40dp"
                android:text="@string/question4"
                android:textColor="#FFFFFF"
                android:textStyle="bold" />

            <RadioGroup
                android:id="@+id/radioGroup4"
                android:layout_width="310dp"
                android:layout_height="200dp"
                android:layout_marginStart="55dp"
                android:layout_marginLeft="55dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="55dp"
                android:layout_marginRight="55dp">

                <RadioButton
                    android:id="@+id/answer16"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:buttonTint="@color/orange"
                    android:text="@string/answer16"
                    android:textColor="#FFFFFF" />

                <RadioButton
                    android:id="@+id/answer17"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:buttonTint="@color/orange"
                    android:text="@string/answer17"
                    android:textColor="#FFFFFF" />

                <RadioButton
                    android:id="@+id/answer18"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:buttonTint="@color/orange"
                    android:text="@string/answer18"
                    android:textColor="#FFFFFF" />

                <RadioButton
                    android:id="@+id/answer19"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:buttonTint="@color/orange"
                    android:text="@string/answer19"
                    android:textColor="#FFFFFF" />

                <RadioButton
                    android:id="@+id/answer20"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:buttonTint="@color/orange"
                    android:text="@string/answer20"
                    android:textColor="#FFFFFF" />
            </RadioGroup>

            <TextView
                android:id="@+id/question5"
                android:layout_width="310dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="55dp"
                android:layout_marginLeft="55dp"
                android:text="@string/question5"
                android:textColor="#FFFFFF"
                android:textStyle="bold" />

            <RadioGroup
                android:id="@+id/radioGroup5"
                android:layout_width="310dp"
                android:layout_height="200dp"
                android:layout_marginStart="55dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="55dp">

                <RadioButton
                    android:id="@+id/answer21"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:buttonTint="@color/orange"
                    android:text="@string/answer21"
                    android:textColor="#FFFFFF">

                </RadioButton>

                <RadioButton
                    android:id="@+id/answer22"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:buttonTint="@color/orange"
                    android:text="@string/answer22"
                    android:textColor="#FFFFFF" />

                <RadioButton
                    android:id="@+id/answer23"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:buttonTint="@color/orange"
                    android:text="@string/answer23"
                    android:textColor="#FFFFFF" />

                <RadioButton
                    android:id="@+id/answer24"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:buttonTint="@color/orange"
                    android:text="@string/answer24"
                    android:textColor="#FFFFFF" />

                <RadioButton
                    android:id="@+id/answer25"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:buttonTint="@color/orange"
                    android:text="@string/answer25"
                    android:textColor="#FFFFFF" />

            </RadioGroup>

            <TextView
                android:id="@+id/question6"
                android:layout_width="310dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="55dp"
                android:layout_marginLeft="55dp"
                android:text="@string/question6"
                android:textColor="#FFFFFF"
                android:textStyle="bold" />

            <RadioGroup
                android:id="@+id/radioGroup6"
                android:layout_width="310dp"
                android:layout_height="200dp"
                android:layout_marginStart="55dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="55dp">

                <RadioButton
                    android:id="@+id/answer26"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:buttonTint="@color/orange"
                    android:text="@string/answer26"
                    android:textColor="#FFFFFF" />

                <RadioButton
                    android:id="@+id/answer27"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:buttonTint="@color/orange"
                    android:text="@string/answer27"
                    android:textColor="#FFFFFF" />

                <RadioButton
                    android:id="@+id/answer28"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:buttonTint="@color/orange"
                    android:text="@string/answer28"
                    android:textColor="#FFFFFF" />

                <RadioButton
                    android:id="@+id/answer29"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:buttonTint="@color/orange"
                    android:text="@string/answer29"
                    android:textColor="#FFFFFF" />

                <RadioButton
                    android:id="@+id/answer30"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:buttonTint="@color/orange"
                    android:text="@string/answer30"
                    android:textColor="#FFFFFF" />
            </RadioGroup>

            <RelativeLayout
                android:layout_width="310dp"
                android:layout_height="200dp"
                android:layout_marginStart="55dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="55dp"
                android:layout_marginBottom="15dp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/backButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:backgroundTint="@color/orange"
                    android:onClick="backTravel"
                    android:text="@string/back" />

                <Button
                    android:id="@+id/nextButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:backgroundTint="@color/orange"
                    android:onClick="facilityPage"
                    android:text="@string/next" />
            </RelativeLayout>

        </LinearLayout>

    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>