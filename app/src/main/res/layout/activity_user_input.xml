<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UserInput"
    android:background="#212121">

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="35dp"
                android:layout_marginTop="25dp"
                android:text="@string/travelTitle"
                android:textColor="@color/yellow"
                android:textSize="24sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginLeft="35dp" />

            <TextView
                android:id="@+id/question1"
                android:layout_width="310dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="55dp"
                android:layout_marginLeft="55dp"
                android:layout_marginTop="40dp"
                android:text="@string/question1"
                android:textColor="#FFFFFF" />

            <RadioGroup
                android:id="@+id/radioGroup"
                android:layout_width="310dp"
                android:layout_height="200dp"
                android:layout_marginStart="55dp"
                android:layout_marginLeft="55dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="55dp"
                android:layout_marginRight="55dp">

                <RadioButton
                    android:id="@+id/answer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:buttonTint="@color/yellow"
                    android:text="@string/answer1"
                    android:textColor="#FFFFFF" />

                <RadioButton
                    android:id="@+id/answer2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:buttonTint="@color/yellow"
                    android:text="@string/answer2"
                    android:textColor="#FFFFFF" />

                <RadioButton
                    android:id="@+id/answer3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:buttonTint="@color/yellow"
                    android:text="@string/answer3"
                    android:textColor="#FFFFFF" />

                <RadioButton
                    android:id="@+id/answer4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:buttonTint="@color/yellow"
                    android:text="@string/answer4"
                    android:textColor="#FFFFFF" />

                <RadioButton
                    android:id="@+id/answer5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:buttonTint="@color/yellow"
                    android:text="@string/answer5"
                    android:textColor="#FFFFFF" />
            </RadioGroup>

            <TextView
                android:id="@+id/question2"
                android:layout_width="310dp"
                android:layout_height="wrap_content"
                android:text="@string/question2"
                android:textColor="#FFFFFF"
                android:layout_marginStart="55dp"
                android:layout_marginLeft="55dp" />

            <RadioGroup
                android:id="@+id/radioGroup2"
                android:layout_width="310dp"
                android:layout_height="200dp"
                android:layout_marginStart="55dp"
                android:layout_marginLeft="55dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="55dp"
                android:layout_marginRight="55dp">

                <RadioButton
                    android:id="@+id/answer6"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:buttonTint="@color/yellow"
                    android:text="@string/answer6"
                    android:textColor="#FFFFFF">

                </RadioButton>

                <RadioButton
                    android:id="@+id/answer7"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:buttonTint="@color/yellow"
                    android:text="@string/answer7"
                    android:textColor="#FFFFFF" />

                <RadioButton
                    android:id="@+id/answer8"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:buttonTint="@color/yellow"
                    android:text="@string/answer8"
                    android:textColor="#FFFFFF" />

                <RadioButton
                    android:id="@+id/answer9"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:buttonTint="@color/yellow"
                    android:text="@string/answer9"
                    android:textColor="#FFFFFF" />

                <RadioButton
                    android:id="@+id/answer10"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:buttonTint="@color/yellow"
                    android:text="@string/answer10"
                    android:textColor="#FFFFFF" />

            </RadioGroup>

            <TextView
                android:id="@+id/question3"
                android:layout_width="310dp"
                android:layout_height="wrap_content"
                android:text="@string/question3"
                android:textColor="#FFFFFF"
                android:layout_marginStart="55dp"
                android:layout_marginLeft="55dp" />

            <RadioGroup
                android:id="@+id/radioGroup3"
                android:layout_width="310dp"
                android:layout_height="200dp"
                android:layout_marginStart="55dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="55dp"
                android:layout_marginBottom="55dp">

                <RadioButton
                    android:id="@+id/answer11"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:buttonTint="@color/yellow"
                    android:text="@string/answer11"
                    android:textColor="#FFFFFF" />

                <RadioButton
                    android:id="@+id/answer12"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:buttonTint="@color/yellow"
                    android:text="@string/answer12"
                    android:textColor="#FFFFFF" />

                <RadioButton
                    android:id="@+id/answer13"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:buttonTint="@color/yellow"
                    android:text="@string/answer13"
                    android:textColor="#FFFFFF" />

                <RadioButton
                    android:id="@+id/answer14"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:buttonTint="@color/yellow"
                    android:text="@string/answer14"
                    android:textColor="#FFFFFF" />

                <RadioButton
                    android:id="@+id/answer15"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:buttonTint="@color/yellow"
                    android:text="@string/answer15"
                    android:textColor="#FFFFFF" />

                <RadioButton
                    android:id="@+id/answer120"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:buttonTint="@color/yellow"
                    android:text="@string/answer"
                    android:textColor="#FFFFFF" />
            </RadioGroup>

            <RelativeLayout
                android:layout_width="310dp"
                android:layout_height="200dp"
                android:layout_marginStart="55dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="55dp"
                android:layout_marginBottom="15dp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/backButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:backgroundTint="@color/yellow"
                    android:onClick="backHome"
                    android:text="@string/back" />

                <Button
                    android:id="@+id/nextButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:backgroundTint="@color/yellow"
                    android:onClick="electric"
                    android:text="@string/next" />
            </RelativeLayout>

        </LinearLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>